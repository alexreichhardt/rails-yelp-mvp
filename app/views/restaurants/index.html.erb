

<h1>My list of restaurants</h1>

<% i = 0 %>
<% @restaurants.each do |restaurant| %>
  <% i += 1 %>
  <% if i == 10 %>
    <% break %>
  <% else %>
    <div class="card">
      <div class="text">
        <h2><%=restaurant.name %></h2>
        <p><strong>Adress: </strong><%=restaurant.address %></p>
        <p><strong>Phone: </strong><%=restaurant.phone_number %></p>
        <p><strong>Category: </strong><%=restaurant.category %></p>
      </div>
      <div class="btns">
        <div class="my-btn">
          <i class="fas fa-search btn-icn"></i><%= link_to("Show", restaurant_path(restaurant), class: "btn-fnt") %>
        </div>
        <div class="my-btn">
          <i class="far fa-edit btn-icn"></i><%= link_to("Edit", edit_restaurant_path(restaurant), class: "btn-fnt") %>
        </div>
        <div class="my-btn">
          <i class="far fa-trash-alt btn-icn"></i> <%= link_to("Delete", restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-fnt") %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
